//attach a model an entity that is the scene
void Renderer::attachModel(entt::entity& entity, std::string modelPath)
{
    //load the model if it is not already loaded
    if(m_models.count(modelPath) == 0){
        Model m;
        //code for loading all the components of the model here
        loadModel(modelPath, m.numIndices, m.indexBuffer, m.indexBufferMemory, m.vertexBuffer, m.vertexBufferMemory);
        //loadTextureImage(texturePath, m.texture, m.textureMemory); 
        //createTextureImageView(m.texture, m.textureView);
        m_models.insert({ modelPath, m });
    }
    m_scene->emplace<Renderable>(entity, modelPath); 
}

